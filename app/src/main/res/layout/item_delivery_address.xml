<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/shape_token_order_card_bg"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="韩梅梅"
        android:textColor="@color/fontColor"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_tel_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/tv_name"
        android:text="15305221842"
        android:textColor="@color/middleColor" />


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:button="@drawable/selector_checkbox"
        android:checked="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@+id/cb_selected"
        android:lineSpacingExtra="10dp"
        android:text="重庆市巴南区龙洲湾渝南大道172号6栋12-3"
        android:textColor="@color/fontColor"
        android:textSize="15sp" />


</RelativeLayout>